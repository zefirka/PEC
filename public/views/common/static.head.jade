- var lang = locals.language
- var viewport = locals.viewport

meta(http-equiv="Content-Language",content=lang)
meta(charset="utf-8")
meta(name="description", content=description)
meta(name="viewport", content="width=device-width, initial-scale=#{viewport.initialScale}")
meta(http-equiv="cleartype",content="on")
meta(name="viewport", content="width=device-width, user-scalable=#{viewport.userScalable}, initial-scale=#{viewport.initialScaleDouble}, maximum-scale=#{viewport.maximumScaleDouble}")

title!= title

- var favicon = locals.favicon
link(rel="shortcut icon",href=favicon,type="image/x-icon")
link(rel="apple-touch-icon",href=favicon)

- var styles = locals.styles

each url in styles
	link(rel='stylesheet',href=url)
